{{>header}}
{{>navbar}}
<section class="my-5 container">
    {{#unless result}}
    <div class="alert alert-danger">
        Invalid task id
    </div>
    {{else}}
    <div class="row">
        <div class="col-4">
            ID: {{result.id}}
        </div>
        <div class="col-4">
            Name: {{result.name}}
        </div><div class="col-4">
            Writer Name: {{result.writername}}
        </div>
        <div class="col-6">
            Division: {{result.division}}
        </div>
        <div class="col-6">
            Number of Pages: {{result.pages}}
        </div>
         <div class="col-6">
            Status: {{result.status}}
        </div>
    </div>
    {{/unless}}
</section>
{{>footer}}